body
  transform-style: preserve-3d;
body, h1
  margin: 0;
.link
  position relative
  text-decoration: none;
  background-color: #AD974F
  color #333333
  padding 5px
  border-radius: 5px
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19)
  &:before
    content ''
    position absolute
    width 100%
    height 3px
    bottom 0
    left 0
    background-color: #333333
    visibility hidden
    transform: scaleX(0)
    transition all 0.3s ease-in-out 0s
  &:hover:before
    visibility: visible;
    transform scaleX(1)
header
  position sticky
  top 0px
  left 0px
  width 100%
  z-index: 3
  height 35px
  text-align: right;
  background-color #333333
#nav-icon
  position relative
  display block
  width 45px
  height 35px
  &:hover
    background-color: #989898
    span
      background-color: #333333
  span
    display block
    position: absolute;
    background-color: #989898
    width 35px
    height: 5px
    left 5px
    &:nth-child(1)
      top: 5px
    &:nth-child(2)
      top 15px
    &:nth-child(3)
      top 25px
nav
  visibility: hidden;
  position: absolute;
  top 0px
  left 0px
  height 100%
  width 100%
  display flex
  flex-flow: column;
  justify-content: center;
  align-items: center;
  background-color: rgba(0,0,0,0.9)
  a
    color #AD974F
    text-decoration: none;
    font-size 26px
    margin 5px
    &:hover
      font-size: 30px
#viewport
  width: 100%;
  height: 100vh;
  overflow-x: hidden;
  overflow-y: auto;
  perspective: 1px;
  perspective-origin: 0 0;
  -webkit-overflow-scrolling: touch;
#intro
  position: relative;
  z-index: -1;
  height: 100vh;
  width 100%
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: flex-end;
  background-image url("background.png")
  background-size: cover;
  background-repeat: no-repeat;
  transform-origin: 0 0;
  transform: translateZ(-2px) scale(3);
  h1
    padding 5px
    border-radius: 5px
    background-color: #333333
    color #AD974F
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19)
  a
    margin-bottom: 50px
#profile
  position absolute
  top 0px
  left 0px
  z-index -1
#projects
  position relative
  z-index: 2
  display flex
  flex-flow wrap
  background-color: #444444
  cursor pointer
.project
  position relative
  box-sizing border-box
  width 100%
  margin-top: -5px
  &:hover .title
    visibility: visible;
  img
    margin 0
    width 100%
    height auto
  @media screen and (min-width: 800px)
    width 50%
.title
  width 100%
  position absolute
  bottom: 0
  margin 0
  padding 5px
  font-size: 26px
  text-align: center;
  background-color: rgba(0,0,0,0.7)
  color #AD974F
  @media screen and (min-width: 800px)
    visibility hidden
#more
  height: 100vh;
  background-image url("background.png")
  background-size: cover;
  background-repeat: no-repeat;
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: center;
  color white
  h1
    text-align: center;
#infos
  margin-top: 50px
  display flex
  flex-wrap: wrap;
  justify-content: center
  a
    margin-top: 5px
    margin-left 5px
    font-size: 21px
footer
  height 50px
  background-color: #333333
