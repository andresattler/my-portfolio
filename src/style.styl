body
  transform-style: preserve-3d;
body, h1
  margin: 0;
nav
  width 100%
  z-index: 3
  height 45px
  text-align: right;
  background-color black
  a
    display: inline-block;
    margin-right: 10px
    text-decoration: none;
    color black
    outline 0
#nav-icon
  position relative
  width 40px
  height 50px
  span
    display block
    position: absolute;
    background: white
    width 100%
    height: 5px
    border-radius: 5px
    &:nth-child(1)
      top: 5px
    &:nth-child(2)
      top 15px
    &:nth-child(3)
      top 25px
#viewport
  width: 100%;
  height: 100vh;
  overflow-x: hidden;
  overflow-y: auto;
  perspective: 1px;
  perspective-origin: 0 0;
  -webkit-overflow-scrolling: touch;
#intro
  height: 100vh;
  width 100%
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: flex-end;
  background-color: #18435F;
  transform-origin: 0 0;
  transform: translateZ(-2px) scale(3);
  color: white;
  a
    text-decoration: none;
    color #AD974F
    margin-bottom: 50px
#profile
  position absolute
  top 0px
  left 0px
  z-index -1
#projects
  position relative
  z-index: 2
  display flex
  flex-flow wrap
  background-color: #0E202C
.project
  box-sizing border-box
  width 100%
  height 500px
  border 1px solid white
  @media screen and (min-width: 800px)
    width 50%
#more
  height: 800px;
  background-color: #18435F;
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: center;
  color white
  p
    text-align: center;
footer
  height 50px
  background-color: #0E202C
