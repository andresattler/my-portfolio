body
  transform-style: preserve-3d;
body, h1
  margin: 0;
nav
  width 100%
  z-index: 3
  height 35px
  text-align: right;
  background-color #333333
#nav-icon
  position relative
  display block
  width 45px
  height 35px
  &:hover
    background-color: #989898
    span
      background-color: #333333
  span
    display block
    position: absolute;
    background-color: #989898
    width 35px
    height: 5px
    border-radius: 5px
    left 5px
    &:nth-child(1)
      top: 5px
    &:nth-child(2)
      top 15px
    &:nth-child(3)
      top 25px
#viewport
  width: 100%;
  height: 100vh;
  overflow-x: hidden;
  overflow-y: auto;
  perspective: 1px;
  perspective-origin: 0 0;
  -webkit-overflow-scrolling: touch;
#intro
  position: relative;
  z-index: -1;
  height: 100vh;
  width 100%
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: flex-end;
  background-image url("background.png")
  background-size: cover;
  background-repeat: no-repeat;
  transform-origin: 0 0;
  transform: translateZ(-2px) scale(3);
  a
    text-decoration: none;
    color #AD974F
    margin-bottom: 50px
#profile
  position absolute
  top 0px
  left 0px
  z-index -1
#projects
  position relative
  z-index: 2
  display flex
  flex-flow wrap
  background-color: #444444
.project
  box-sizing border-box
  width 100%
  height 500px
  border 1px solid black
  @media screen and (min-width: 800px)
    width 50%
#more
  height: 100vh;
  background-image url("background.png")
  background-size: cover;
  background-repeat: no-repeat;
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: center;
  color white
  p
    text-align: center;
footer
  height 50px
  background-color: #333333
